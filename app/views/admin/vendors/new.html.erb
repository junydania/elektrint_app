<div class="content-page">
  <!-- Start content -->
  <div class="content">
    <div class="container">

      <!-- Forms -->
      <div class="row">
        <div class="col-sm-12">
          <div class="card-box">
            <div class="row">
              <div class="col-md-6">
                <h4 class="m-t-0 header-title"><b>Vendors</b></h4>
                <p class="text-muted m-b-30 font-13">
                  <code>New Vendor</code>
                </p>

                <%= form_for([:admin, @vendor], html: { multipart: true }) do |f| %>
                    <div class="form-group">
                      <%= f.label :company_name, 'Vendor Company Name' %>
                      <%= f.text_field :company_name, autofocus: true, :class => "form-control" %>
                    </div>
                    <div class="form-group">
                      <%= f.label :email, 'Vendor Email' %>
                      <%= f.email_field :email, autofocus: true, :class => "form-control" %>
                    </div>
                    <div class="form-group">
                      <%= f.label :phone, 'Vendor Phone Number' %>
                      <%= f.text_field :phone, autofocus: true, :class => "form-control" %>
                    </div>
                    <div class="form-group">
                      <%= f.label :representative_name, 'Vendor Rep Name' %>
                      <%= f.text_field :phone, autofocus: true, :class => "form-control" %>
                    </div>
                    <div class="form-group">
                      <%= f.label :office_address, 'Vendor Address' %>
                      <%= f.text_field :office_address, autofocus: true, :class => "form-control" %>
                    </div>
                    <%= f.submit "Submit", class: "btn btn-purple" %>
                    <%= flash[:notice] %>
                <% end %>
              </div><!-- end col -->
            </div><!-- end row -->
          </div>
        </div><!-- end col -->
      </div>
      <!-- end row -->
    </div> <!-- container -->

  </div> <!-- content -->

  <footer class="footer">
    2018 Â© Elektrint Limited
  </footer>

</div>

