<div class="account-pages"></div>
<div class="clearfix"></div>
<div class="wrapper-page">
  <div class="text-center">
    <a href="index.html" class="logo"><span>StanbicIBTC</span></a>
    <h5 class="text-muted m-t-0 font-600">HR Login Page</h5>
  </div>
  <div class="m-t-40 card-box">
    <div class="text-center">
      <h4 class="text-uppercase font-bold m-b-0">Sign In</h4>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal m-t-20"}) do |f| %>
        <div class="form-group">
          <div class="col-xs-12">
            <%= f.label :email %><br/>
            <%= f.email_field :email, autofocus: true, :class => "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-xs-12">
            <%= f.label :password %><br/>
            <%= f.password_field :password, autocomplete: "off", :class => "form-control"  %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div class="form-group ">
              <div class="col-xs-12">
                <div class="checkbox checkbox-custom">
                  <%= f.check_box :remember_me, :id => "checkbox-signup" %>
                  <%= f.label :remember_me %>
                  </label>
                </div>
              </div>
            </div>
        <% end -%>

        <div class="form-group text-center m-t-30">
          <div class="col-xs-12">
            <%= f.submit "Log In", :class => "btn btn-custom btn-block" %>
          </div>
        </div>

        <div class="form-group m-t-30 m-b-0">
          <div class="col-sm-12">
            <i class="fa fa-lock m-r-5"></i>
            <%= link_to "Forgot your password?", edit_user_password_path, :class => "text-muted" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

